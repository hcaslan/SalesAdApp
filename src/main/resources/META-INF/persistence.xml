<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="HibernatePU">

        <class>org.bilgeadam.entity.Category</class>
        <class>org.bilgeadam.entity.Comment</class>
        <class>org.bilgeadam.entity.FavouriteIlan</class>
        <class>org.bilgeadam.entity.Ilan</class>
        <class>org.bilgeadam.entity.Image</class>
        <class>org.bilgeadam.entity.Message</class>
        <class>org.bilgeadam.entity.User</class>


        <properties>
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/SalesAdApp" />
            <property name="jakarta.persistence.jdbc.user" value="postgres" />
            <property name="jakarta.persistence.jdbc.password" value="1234" />
            <property name="hibernate.hbm2ddl.auto" value="update" />

            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.format_sql" value="false" />
        </properties>

    </persistence-unit>

</persistence>